<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/imgIconView"
        android:layout_width="68.0dip"
        android:layout_height="68.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/default_notif_thumb" />

    <LinearLayout
        android:id="@+id/lnImgRemoveView"
        android:layout_width="30.0dp"
        android:layout_height="68dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip" >

        <ImageView
            android:id="@+id/imgRemoveView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notif_close_mtrl" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imgNext_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="15.0dip"
        android:layout_toLeftOf="@id/lnImgRemoveView"
        android:src="@drawable/ic_widget_next" />

    <ImageView
        android:id="@+id/imgPlayPauseView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@id/imgNext_notif" />

    <TextView
        android:id="@+id/txtTitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imgIconView"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_marginTop="12.0dip"
        android:layout_toLeftOf="@+id/imgPlayPauseView"
        android:layout_toRightOf="@+id/imgIconView"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:maxLines="1" />

    <TextView
        android:id="@+id/txtSubTitleView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/imgIconView"
        android:layout_marginBottom="12.0dip"
        android:layout_marginLeft="8.0dip"
        android:layout_marginRight="5.0dip"
        android:layout_toLeftOf="@id/imgPlayPauseView"
        android:layout_toRightOf="@id/imgIconView"
        android:ellipsize="marquee"
        android:fadingEdge="horizontal"
        android:maxLines="1" />

</RelativeLayout>